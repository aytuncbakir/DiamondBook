<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tsblay"
    android:orientation="vertical"
    tools:context="com.sivamalabrothers.cevher.Zikirmatik">

    <EditText
        android:id="@+id/zikirSayi"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:background="@drawable/cerceve"
        android:ems="10"
        android:gravity="center"
        android:focusable="false"
        android:inputType="number"
        android:textAlignment="inherit"
        android:textAllCaps="false"
        android:text="1"
        android:textColor="@color/colorPrimaryDark"
        android:textIsSelectable="false"
        android:textSize="48sp"  />

    <Button
        android:id="@+id/tesbih"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buton_selektor"
        android:text="0"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp" />


    <Button
        android:id="@+id/yenile"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_above="@+id/tesbih"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp"
        android:background="@drawable/tesbih_buton"
        android:text="@string/yenile"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp" />

    <Button
        android:id="@+id/tesbih1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/yenile"
        android:background="@drawable/buton_selektor"
        android:text="0"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp" />

    <Button
        android:id="@+id/tesbih2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/yenile"
        android:background="@drawable/buton_selektor"
        android:text="0"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp" />




</RelativeLayout>